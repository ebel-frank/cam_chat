<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp">

    <ImageView
        android:id="@+id/contact_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_contact_add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        tools:text="Elena West"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/contact_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/call_icon"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="18dp"
        android:src="@drawable/ic_contact_add"
        app:layout_constraintBottom_toBottomOf="@+id/call_info"
        app:layout_constraintStart_toEndOf="@+id/contact_icon"
        app:layout_constraintTop_toTopOf="@+id/call_info"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/call_icon"
        app:layout_constraintTop_toBottomOf="@+id/contact_name"
        tools:text="17 August, 8:30PM" />

    <ImageView
        android:id="@+id/video_call"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:src="@android:drawable/presence_video_online"
        app:layout_constraintBottom_toBottomOf="@+id/contact_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_icon"
        app:tint="@color/purple_500"
        android:contentDescription="@null" />

</androidx.constraintlayout.widget.ConstraintLayout>